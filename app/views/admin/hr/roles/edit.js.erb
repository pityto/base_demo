$('#new_role_modal').remove();
$('#edit_role_modal').remove();
$('body').append('<div class="ui modal" id="edit_role_modal"><i class="close icon"></i><%= j(render 'edit') %></div>');
$('#edit_role_modal').modal('setting', {autofocus: false}).modal('show');
//提交表单
function submit_form() {
  $("#edit_role_<%= @role.id %>").submit();
}
//验证表单
$("#edit_role_<%= @role.id %>").form({
  inline : true,
  fields: {
    name: {
      identifier: 'role[name]',
      rules: [{
        type: 'regExp[/^[a-zA-Z]+$/]',
        prompt: '请输入英文名称'
      }]
    },
    name_cn: {
      identifier: 'role[name_cn]',
      rules: [{
        type: 'empty',
        prompt: '请输入中文名称'
      }]
    }}
});